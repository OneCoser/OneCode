<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical">

    <chenhao.lib.onecode.view.TitleView
        android:id="@id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onecode_title_view_height"
        android:background="#161616"
        app:tv_leftIcon="@drawable/onecode_icon_back_w"
        app:tv_leftShow="icon"
        app:tv_leftTextSize="@integer/onecode_title_text_min_size_i"
        app:tv_titleText="本地视频"
        app:tv_titleTextSize="@integer/onecode_title_text_big_size_i"
        app:tv_titleTextColor="@android:color/white"/>

    <GridView
        android:id="@+id/video_get_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_view"
        android:cacheColorHint="@android:color/transparent"
        android:horizontalSpacing="5dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:padding="5dp"
        android:scrollbars="none"
        android:verticalSpacing="5dp" />

    <RelativeLayout
        android:id="@+id/video_player_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone">

        <chenhao.lib.onecode.video.ijk.CommonVideoView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <LinearLayout
            android:id="@+id/video_player_action"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#99000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_player_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关闭预览"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#22ffffff" />

            <TextView
                android:id="@+id/video_player_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定选择"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>